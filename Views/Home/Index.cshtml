@model BookDisplayModel
@{

}
<div class="my-2">
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">


        <div class="col-12">
            <label class="visually-hidden" for="genreId">Genres</label>
            <select class="form-select" id="genreId" name="genreId">
                <option selected>Choose...</option>

                @foreach (var genre in Model.Genres)
                {
                    <option selected="@(genre.Id == Model.GenreId)" value=@genre.Id>@genre.GenreName</option>
                }
            </select>


        </div>
        <div class="col-12">
            <label class="visually-hidden" for="">Search By title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.sTerm" id="sterm" name="sterm" placeholder="Search By title">
            </div>
        </div>



        <div class="col-12">
            <button type="submit" class="btn btn-info">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>
    </form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var book in Model.Books)
    {
        <div class="card mx-2 mb-4" style="width: 18rem;">
            @{
                if (string.IsNullOrEmpty(book.Image))
                {
                    <img style="width:100%; height:350px;" src="/images/img1.png" class="card-img-top" alt="DefaultImage">
                }
                else
                {
                    <img style="width:100%; height:350px;" src="/images/@book.Image" class="card-img-top" alt="BookImage">
                }
            }

            <div class="card-body">
                <h5 class="card-title">@book.BookName</h5>
                <p class="card-text">
                    <b>Genre:</b>@book.GenreName<br/>
                    <b>Author:</b>@book.AuthorName<br />
                    <b>Price:</b>@book.Price<br/>
                    @* <b>@book.Quantity</b> *@
                </p>
                @if (book.Quantity > 0)
                {
                    <button type="button" onclick="add(@book.Id)" class="btn btn-dark">Add to Cart</button>
                }
                else
                {
                    <span style="border:1px solid;padding:5px 8px ; color:red;border-radius:5px;">Out Of Stock</span>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function add(bookId){
            var usernameEl=document.getElementById('username');
            if(usernameEl==null){
                window.location.href='/Identity/Account/Login';
            }

            try{
                var response=await fetch(`/Cart/AddItem?bookId=${bookId}`);
                if(response.status==200){
                        var result=await response.json();
                        console.log(result);
                        var cartCountEl=document.getElementById('cartCount');
                        console.log(cartCountEl);
                        console.log(result);
                        cartCountEl.innerText=result;
                        window.location.href="#cartCount";        
                }
            }
            catch(err){
                console.log(err);
            }
        }
    </script>
}