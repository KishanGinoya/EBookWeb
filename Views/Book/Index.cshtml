@model IEnumerable<Book>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Book List";
}
<h2>Books</h2>
<a asp-controller="Book" asp-action="AddBook" class="btn btn-primary">Add More</a>

@if (Model?.Count()>0)
{
    <table class="table table-striped my-2">
        <tr>
            
            <th>Image</th>
            <th>Book</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Price(INR)</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @if (string.IsNullOrEmpty(item.Image))
                    {
                        <img src="/images/img1.png" style="width:80px; height:100px" />
                    }
                    else
                    {
                        <img src="/images/@item.Image" style="width:80px; height:100px" />
                    }
                </td>
                <td>@item.BookName</td>
                <td>@item.AuthorName</td>
                <td>@item.Genre.GenreName</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="UpdateBook" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="DeleteBook" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-danger"
                    onclick="return window.confirm('Are You Sure?') ">Delete</a>
                </td>
            </tr>
        }
    </table>
}